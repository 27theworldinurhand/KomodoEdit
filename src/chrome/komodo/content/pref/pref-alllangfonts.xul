        <button style="margin: 25px !important"
                id="openEditor"
                label="Open Color Scheme Editor"/>
    </vbox>
    
    <script src="chrome://komodo/content/pref/pref-alllangfonts.js" type="application/x-javascript;version=1.7"/>

</window>

